{% extends 'base.html.twig' %}

{% block title %}Equipment{% endblock %}

{% block body %}
    <h1>Equipment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ equipment.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ equipment.description }}</td>
            </tr>
            <tr>
                <th>Datestart</th>
                <td>{{ equipment.datestart ? equipment.datestart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Dateend</th>
                <td>{{ equipment.dateend ? equipment.dateend|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Characteristics</th>
                <td>{{ equipment.characteristics ? equipment.characteristics|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipment_index') }}">back to list</a>

    <a href="{{ path('app_equipment_edit', {'id': equipment.id}) }}">edit</a>

    {{ include('equipment/_delete_form.html.twig') }}
{% endblock %}
